# /bin/bash
#a script for creating a chroot enviroment within ubuntu 16.04  using the same version 
 sudo apt update  
 sudo apt install -y squashfs-tools genisoimage syslinux gfxboot-themes aptitude build-essential uck dchroot debootstrap
 sudo nano /etc/schroot//schroot.conf 
 sudo debootstrap --variant=buildd --arch amd64 xenial /test/ http://mirror.cc.columbia.edu/pub/linux/ubuntu/archive/
 
 sudo nano /etc/fstab 
 sudo mount proc /test/proc -t proc
 sudo mount sysfs /test/sys -t sysfs
 sudo cp /etc/hosts /test/etc/hosts
 sudo chroot /test/ /bin/bash 
 sudo cp /etc/apt/sources.list /test/etc/apt/
 sudo chroot /test/
 mkdir -p work/chroot
 cd work/
 sudo debootstrap --arch=amd64  
 sudo debootstrap --arch=$ARCH $RELEASE chroot 
 sudo debootstrap --arch=amd64 xenial
 sudo debootstrap --arch=amd64 xenial chroot
 sudo mount --bind /dev/ chroot/dev/
 sudo cp /etc/hosts chroot/etc/hosts
 sudo cp /etc/resolv.conf chroot/etc/resolv.conf 
 sudo cp /etc/apt/sources.list chroot/etc/apt/sources.list
 sudo chroot chroot
